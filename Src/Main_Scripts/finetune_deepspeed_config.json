{
    "_comment": "DeepSpeed Configuration for Fine-tuning Ultra Low VRAM Models",
    "_description": "Optimized DeepSpeed settings for memory-efficient fine-tuning",
    
    "train_batch_size": 32,
    "train_micro_batch_size_per_gpu": 2,
    "gradient_accumulation_steps": 16,
    
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 3e-5,
        "betas": [0.9, 0.95],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
    
    "scheduler": {
      "type": "WarmupDecayLR",
      "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": 3e-5,
        "warmup_num_steps": "auto",
        "total_num_steps": "auto"
      }
    },
    
    "fp16": {
      "enabled": true,
      "loss_scale": 0,
      "loss_scale_window": 1000,
      "initial_scale_power": 16,
      "hysteresis": 2,
      "min_loss_scale": 1,
      "auto_cast": false
    },
    
    "bf16": {
      "enabled": false
    },
    
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      },
      "offload_param": {
        "device": "none",
        "pin_memory": false
      },
      "overlap_comm": true,
      "contiguous_gradients": true,
      "sub_group_size": 1e9,
      "reduce_bucket_size": "auto",
      "memory_efficient_linear": false
    },
    
    "activation_checkpointing": {
      "partition_activations": true,
      "cpu_checkpointing": true,
      "contiguous_memory_optimization": false,
      "number_checkpoints": 4,
      "synchronize_checkpoint_boundary": false,
      "profile": false
    },
    
    "gradient_clipping": 1.0,
    "steps_per_print": 10,
    "wall_clock_breakdown": false,
    
    "_alternative_configs": {
      "ultra_memory_efficient": {
        "zero_optimization": {
          "stage": 3,
          "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
          },
          "offload_param": {
            "device": "cpu",
            "pin_memory": true
          },
          "stage3_prefetch_bucket_size": "auto",
          "stage3_param_persistence_threshold": "auto",
          "stage3_max_live_parameters": 1e9,
          "stage3_max_reuse_distance": 1e9,
          "stage3_gather_16bit_weights_on_model_save": true
        },
        "train_micro_batch_size_per_gpu": 1,
        "gradient_accumulation_steps": 32
      },
      
      "bf16_config": {
        "fp16": {
          "enabled": false
        },
        "bf16": {
          "enabled": true
        },
        "zero_optimization": {
          "stage": 2,
          "offload_optimizer": {
            "device": "cpu"
          }
        }
      },
      
      "fp32_stable": {
        "fp16": {
          "enabled": false
        },
        "bf16": {
          "enabled": false
        },
        "zero_optimization": {
          "stage": 1,
          "offload_optimizer": {
            "device": "none"
          }
        },
        "train_micro_batch_size_per_gpu": 1,
        "gradient_accumulation_steps": 64
      }
    },
    
    "_usage_notes": {
      "memory_usage": "This config is optimized for 6-8GB VRAM cards",
      "precision": "FP16 by default, change to BF16 if hardware supports it",
      "zero_stage": "Stage 2 balances memory savings with performance",
      "batch_size": "Adjust train_micro_batch_size_per_gpu based on available memory",
      "offloading": "CPU offloading reduces GPU memory usage at cost of speed"
    },
    
    "_performance_tuning": {
      "high_memory": {
        "train_micro_batch_size_per_gpu": 4,
        "gradient_accumulation_steps": 8,
        "zero_optimization": {
          "stage": 1,
          "offload_optimizer": {
            "device": "none"
          }
        }
      },
      
      "medium_memory": {
        "train_micro_batch_size_per_gpu": 2,
        "gradient_accumulation_steps": 16,
        "zero_optimization": {
          "stage": 2,
          "offload_optimizer": {
            "device": "cpu"
          }
        }
      },
      
      "low_memory": {
        "train_micro_batch_size_per_gpu": 1,
        "gradient_accumulation_steps": 32,
        "zero_optimization": {
          "stage": 3,
          "offload_optimizer": {
            "device": "cpu"
          },
          "offload_param": {
            "device": "cpu"
          }
        }
      }
    }
  }